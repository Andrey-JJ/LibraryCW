@model LibraryCW.Models.ViewModels.CategoriesAndCards

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h4>Отдел</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Categorie.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categorie.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Categorie.Id" class="btn btn-edit">Изменить запись</a>
    <a asp-action="Index" class="btn btn-back">Вернуться к списку</a>
</div>

<section>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Books.First().Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Books.First().Edition)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Books.First().Author)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Books)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Edition)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Author)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-edit" type="submit">Изменить запись</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-1" type="submit">Информация</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-delete" type="submit">Удалить запись</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>
